# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll and Bundler
gem "jekyll", "~> 4.4.0"
gem "bundler"

# Theme Dependencies
gem "jekyll-remote-theme"
gem "jekyll-seo-tag"
gem "jekyll-sitemap"
gem "jekyll-feed"
gem "jekyll-paginate"
gem "jekyll-gist"

# Required for running Jekyll on newer Ruby versions
gem "webrick"

# Rake version fix (allows newer versions)
gem "rake", ">= 12.0"
